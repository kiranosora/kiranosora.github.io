<iframe id="letter 3d" src="letter3d.html"  frameborder="0" border="0" scrolling="0" onload="iFrameHeight(event)"></iframe>
<iframe id="letter twinkling" src="twinklingFont.html"  frameborder="0" border="0" onload="iFrameHeight(event)" scrolling="0"></iframe>


<script type="text/javascript" language="javascript">   
function iFrameHeight(event) {   
    //var ifm= document.getElementById("iframepage");   
    
    var ifm=event.srcElement||event.target;
    var subWeb= ifm.contentDocument;
    if(subWeb == null) {alert("null subWeb !!!!!!!!!!");}
    //var subWeb = document.frames ? document.frames["iframepage"].document : ifm.contentDocument;   
    if( ifm == null){ alert("iframe null");}
    else{ alert(ifm);}
    if(ifm != null && subWeb != null) {
           //ifm.height = 1024;
           ifm.height = subWeb.body.scrollHeight;
           //ifm.width = subWeb.body.scrollWidth;
           //ifm.height = document.body.scrollHeight;
           ifm.width = window.screen.width;
    } 
    }   
</script>
